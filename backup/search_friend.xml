<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    >

   <LinearLayout
        android:id="@+id/title_search_friend"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:background="#ffaa66cc"
        android:orientation="horizontal"
        android:paddingLeft="10dp" 
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/button_selector"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:gravity="center_vertical"
            android:text="@string/select_file"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>
    
    
    
	<com.ucweb.xpread.widget.SearchFriendViewgroup
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/title_search_friend"
	    >
	    
	    <com.ucweb.xpread.widget.CircleBackgroudView
	        android:id="@+id/background"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        />
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/user_icon"
	        android:layout_width="150dp"
	        android:layout_height="150dp"
	        android:src="@drawable/photo"
	        
	        />
	    
	    <TextView 
	        android:id="@+id/user_name"
	        android:layout_width="150dp"
	        android:layout_height="40dp"
	        android:text="Sara"
	        android:textSize="30sp"
	        android:gravity="center"
	        
	        android:ellipsize="end"
	        
	        />
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/friend_one_icon"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/photo"
	        android:visibility="gone"
	        />
	    
	    <TextView 
	        android:id="@+id/friend_one_name"
	        android:layout_width="80dp"
	        android:layout_height="25dp"
	        android:text="Sara"
	        android:textSize="15sp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:ellipsize="end"
	        />
	    
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/friend_two_icon"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/photo"
	        android:visibility="gone"
	        />
	    
	    <TextView 
	        android:id="@+id/friend_two_name"
	        android:layout_width="80dp"
	        android:layout_height="25dp"
	        android:text="Sara"
	        android:textSize="15sp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:ellipsize="end"
	       
	        />
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/friend_three_icon"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/photo"
	        android:visibility="gone"
	        />
	    
	    <TextView 
	        android:id="@+id/friend_three_name"
	        android:layout_width="80dp"
	        android:layout_height="25dp"
	        android:text="Sara"
	        android:textSize="15sp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:ellipsize="end"
	        />
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/friend_four_icon"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/photo"
	        android:visibility="gone"
	        />
	    
	    <TextView 
	        android:id="@+id/friend_four_name"
	        android:layout_width="80dp"
	        android:layout_height="25dp"
	        android:text="Sara"
	        android:textSize="15sp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:ellipsize="end"
	        />
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/friend_five_icon"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/photo"
	        android:visibility="gone"
	        />
	    
	    <TextView 
	        android:id="@+id/friend_five_name"
	        android:layout_width="80dp"
	        android:layout_height="25dp"
	        android:text="Sara"
	        android:textSize="15sp"
	        android:gravity="center"
	        android:visibility="gone"
	        android:ellipsize="end"
	        />
	    
	    <com.ucweb.xpread.widget.RoundImageView 
	        android:id="@+id/friend_six_icon"
	        android:layout_width="80dp"
	        android:layout_height="80dp"
	        android:src="@drawable/photo"
	        android:visibility="gone"
	        />
	    
	    <TextView 
	        android:id="@+id/friend_six_name"
	        android:layout_width="80dp"
	        android:layout_height="25dp"
	        android:text="Sara"
	        android:visibility="gone"
	        android:ellipsize="end"
	        android:textSize="15sp"
	        android:gravity="center"
	        />
	    
	    
	</com.ucweb.xpread.widget.SearchFriendViewgroup> 
    

</RelativeLayout>
