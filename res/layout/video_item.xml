<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:gravity="center_vertical"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/video_check"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center" />

    <com.xpread.widget.RobotoTextView
        android:id="@+id/video_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/video_check"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="14sp" />

    <com.xpread.widget.RobotoTextView
        android:id="@+id/video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@id/video_size"
        android:layout_toRightOf="@id/video_thumbnail"
        android:singleLine="true"
        android:textColor="#333333"
        android:textSize="16dp" />

    <com.xpread.widget.RobotoTextView
        android:id="@+id/video_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/video_title"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:singleLine="true"
        android:textColor="#999999"
        android:textSize="14dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="74dp"
        android:background="?android:attr/listDivider" />

</RelativeLayout>