<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa" >

    <RelativeLayout
        android:id="@+id/title_search_friend"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:background="@color/title_backgroud"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/button_selector"
            android:src="@drawable/back" />

        <com.xpread.widget.RobotoTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="65dp"
            android:gravity="center_vertical"
            android:text="@string/search_friend_title"
            android:textColor="#ffffff"
            android:textSize="20dp"
            roboto:textfont="regular" />
    </RelativeLayout>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/title_search_friend"
        android:background="@drawable/shadow_up" />

    <com.xpread.widget.SearchFriendViewgroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_search_friend" >

        <com.xpread.widget.CircleBackgroudView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/radar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/radar_blue_2" />

        <com.xpread.widget.RoundImageView
            android:id="@+id/user_icon"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/female_01" />

        <com.xpread.widget.FriendViewgroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/friend_one_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_01"
                android:visibility="gone" />

            <com.xpread.widget.RobotoTextView
                android:id="@+id/friend_one_name"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/friend_two_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_01"
                android:visibility="gone" />

            <com.xpread.widget.RobotoTextView
                android:id="@+id/friend_two_name"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/friend_three_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_01"
                android:visibility="gone" />

            <com.xpread.widget.RobotoTextView
                android:id="@+id/friend_three_name"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/friend_four_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_01"
                android:visibility="gone" />

            <com.xpread.widget.RobotoTextView
                android:id="@+id/friend_four_name"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:text="Sara"
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/friend_five_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_01"
                android:visibility="gone" />

            <com.xpread.widget.RobotoTextView
                android:id="@+id/friend_five_name"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/friend_six_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_01"
                android:visibility="gone" />

            <com.xpread.widget.RobotoTextView
                android:id="@+id/friend_six_name"
                android:layout_width="86dp"
                android:layout_height="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:maxLines="1"
                android:textColor="#333333"
                android:textSize="14dp"
                android:visibility="gone" />
        </com.xpread.widget.FriendViewgroup>

        <ImageView
            android:id="@+id/search_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/stop_selector" />

        <ImageView
            android:id="@+id/circle_bule1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_blue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/circle_blue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_blue"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/circle_blue3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/circle_blue"
            android:visibility="gone" />
    </com.xpread.widget.SearchFriendViewgroup>

</RelativeLayout>